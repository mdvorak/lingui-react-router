{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": "./",
    "pretty": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
