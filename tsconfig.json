{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020"
    ],
    "noEmit": true,
    "baseUrl": ".",
    "pretty": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
